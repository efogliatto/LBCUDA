echo Done 4096

cd 8192

latticeBox2D 8192 300 periodicX
ln -s ../InitialParameters.txt .
VdWColumnHT 100 150 >&datos
rm -rf l* f* g* U* r* T*  h* I*
cd ../

echo Done 4096

cd 16384

latticeBox2D 16384 300 periodicX
ln -s ../InitialParameters.txt .
VdWColumnHT 100 150 >&datos
rm -rf l* f* g* U* r* T*  h* I*
cd ../

echo Done 

cd 32768

latticeBox2D 32768 300 periodicX
ln -s ../InitialParameters.txt .
VdWColumnHT 50 100 >&datos
rm -rf l* f* g* U* r* T*  h* I*
cd ../

echo Done 